{
  "title": "Webinar announcement",
  "layout": "../layouts/default/template.mjml",
  "schema": {
    "type": "object",
    "properties": {
      "link": {
        "type": "string",
        "example": "https://example.com"
      },
      "features": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string",
              "example": "Feature title 1"
            }
          },
          "additionalProperties": false,
          "required": ["title"]
        }
      }
    },
    "additionalProperties": false,
    "required": ["features", "link"]
  }
}
